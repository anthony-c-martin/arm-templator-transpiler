resource mod 'publicIpAddress' pip1 {
  name: concat(namePrefix, '-pip1')
  location: rgLocation
}

resource mod 'publicIpAddress' pip2 {
  name: concat(namePrefix, '-pip2')
  location: rgLocation
}

output nicResourceId: resourceId(myNic)