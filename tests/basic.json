{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "namePrefix": {
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2019-11-01",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[concat(parameters('namePrefix'), '-subnet')]",
      "properties": {}
    },
    {
      "apiVersion": "2019-11-01",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(parameters('namePrefix'), '-nic')]",
      "properties": {
        "ipConfigurations": {
          "name": "myConfig",
          "properties": {
            "subnet": {
              "id": "[resourceId('Microsoft.Network/virtualNetworks', concat(parameters('namePrefix'), '-subnet'))]"
            },
            "privateIPAllocationMethod": "Dynamic"
          }
        }
      }
    },
    {
      "apiVersion": "2019-11-01",
      "type": "Microsoft.Network/publicIpAddresses",
      "name": "[concat(parameters('namePrefix'), '-pip')]",
      "properties": {}
    }
  ],
  "outputs": {
    "nicResourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('namePrefix'), '-nic'))]"
    }
  }
}