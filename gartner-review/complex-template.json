{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "namePrefix": {
      "type": "string"
    },
    "vmCount": {
      "type": "string"
    },
    "operatingSystem": {
      "type": "string"
    },
    "availabilitySetName": {
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2019-08-01",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[concat(parameters('namePrefix'), 'nsg')]",
      "location": "eastus",
      "properties": {
        "securityRules": [
          {
            "name": "default-allow-3389",
            "properties": {
              "priority": 1000,
              "access": "Allow",
              "direction": "Inbound",
              "destinationPortRange": "3389",
              "protocol": "Tcp",
              "sourceAddressPrefix": "*",
              "sourcePortRange": "*",
              "destinationAddressRange": "*"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "name": "[concat(parameters('namePrefix'), 'sub001')]",
      "properties": {
        "addressPrefix": "",
        "networkSecurityGroups": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('namePrefix'), 'nsg'))]"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('namePrefix'), 'nsg'))]"
      ]
    },
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[concat(parameters('namePrefix'), 'vnet')]",
      "location": "eastus",
      "properties": {
        "addressSpace": {
          "addressPrefix": "10.0.0.0/16"
        }
      }
    }
  ],
  "outputs": {}
}