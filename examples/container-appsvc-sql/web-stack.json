{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "resources": [
    {
      "apiVersion": "2019-06-01-preview",
      "type": "Microsoft.sql/servers",
      "name": "mySqlServer",
      "location": "eastus2",
      "kind": "v12.0",
      "properties": {
        "administratorLogin": "sonofdiesel",
        "administratorLoginPassword": "P@ssw0rd12345",
        "version": "12.0"
      }
    },
    {
      "apiVersion": "2019-06-01-preview",
      "type": "Microsoft.sql/servers/databases",
      "name": "[concat('mySqlServer', '/', 'db')]",
      "location": "eastus2",
      "sku": {
        "name": "Basic",
        "tier": "Basic",
        "capacity": 5
      },
      "kind": "v12.0,user",
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": 2147483648,
        "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
        "readScale": "Disabled",
        "readReplicaCount": 0,
        "storageAccountType": "GRS"
      },
      "dependsOn": [
        "[resourceId('Microsoft.sql/servers', 'mySqlServer')]"
      ]
    },
    {
      "apiVersion": "2018-11-01",
      "type": "Microsoft.web/serverFarms",
      "name": "myWebsite",
      "location": "eastus2",
      "sku": {
        "name": "B1",
        "tier": "Basic"
      },
      "kind": "linux",
      "properties": {
        "name": "myWebsite",
        "workerSize": "0",
        "workerSizeId": "0",
        "numberOfWorkers": "1"
      }
    },
    {
      "apiVersion": "2018-11-01",
      "type": "Microsoft.web/sites",
      "name": "myWebsite",
      "location": "eastus2",
      "properties": {
        "name": "myWebsite",
        "siteConfig": {
          "appSettings": [
            {
              "name": "DOCKER_REGISTRY_SERVER_URL",
              "value": "[concat('https://', 'myRegistry', '.azurecr.io')]"
            },
            {
              "name": "DOCKER_REGISTRY_SERVER_USERNAME",
              "value": "myUsername"
            },
            {
              "name": "DOCKER_REGISTRY_SERVER_PASSWORD",
              "value": "myPassword"
            },
            {
              "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
              "value": "false"
            }
          ],
          "linuxFxVersion": "[concat('DOCKER|', 'myRegistry', '.azurecr.io/', 'myImage:latest')]"
        },
        "serverFarmId": "[resourceId('Microsoft.web/serverFarms', 'myWebsite')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.web/serverFarms', 'myWebsite')]"
      ]
    }
  ],
  "outputs": {}
}