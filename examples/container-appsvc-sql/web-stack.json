{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "acrPassword": {
      "type": "securestring"
    }
  },
  "resources": [
    {
      "apiVersion": "2019-06-01-preview",
      "type": "Microsoft.sql/servers",
      "name": "lfa2",
      "location": "eastus2",
      "kind": "v12.0",
      "properties": {
        "administratorLogin": "adminUser",
        "administratorLoginPassword": "P@ssw0rd12345",
        "version": "12.0"
      }
    },
    {
      "apiVersion": "2019-06-01-preview",
      "type": "Microsoft.sql/servers/databases",
      "name": "[concat('lfa2', '/', 'db')]",
      "location": "eastus2",
      "sku": {
        "name": "Basic",
        "tier": "Basic",
        "capacity": 5
      },
      "kind": "v12.0,user",
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": 2147483648,
        "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
        "zoneRedundant": false,
        "readScale": "Disabled",
        "readReplicaCount": 0,
        "storageAccountType": "GRS"
      },
      "dependsOn": [
        "[resourceId('Microsoft.sql/servers', 'lfa2')]"
      ]
    },
    {
      "apiVersion": "2018-11-01",
      "type": "Microsoft.web/serverFarms",
      "name": "lfa2",
      "location": "eastus2",
      "sku": {
        "name": "B1",
        "tier": "Basic"
      },
      "kind": "linux",
      "properties": {
        "name": "lfa2",
        "workerSize": "0",
        "workerSizeId": "0",
        "numberOfWorkers": "1",
        "reserved": true
      }
    },
    {
      "apiVersion": "2018-11-01",
      "type": "Microsoft.web/sites",
      "name": "lfa2",
      "location": "eastus2",
      "properties": {
        "name": "lfa2",
        "siteConfig": {
          "appSettings": [
            {
              "name": "DOCKER_REGISTRY_SERVER_URL",
              "value": "[concat('https://', 'feldspar', '.azurecr.io')]"
            },
            {
              "name": "DOCKER_REGISTRY_SERVER_USERNAME",
              "value": "feldspar"
            },
            {
              "name": "DOCKER_REGISTRY_SERVER_PASSWORD",
              "value": "[parameters('acrPassword')]"
            },
            {
              "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
              "value": "false"
            }
          ],
          "linuxFxVersion": "[concat('DOCKER|', 'feldspar', '.azurecr.io/', 'lfa/frontend:latest')]"
        },
        "serverFarmId": "[resourceId('Microsoft.web/serverFarms', 'lfa2')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.web/serverFarms', 'lfa2')]"
      ]
    }
  ],
  "outputs": {}
}