{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "variables": {
        "container1name": "aci-tutorial-app",
        "container1image": "mcr.microsoft.com/azuredocs/aci-helloworld:latest",
        "storageName": "[uniqueString(concat(resourceGroup().id, 'alex123'))]"
    },
    "resources": [
        {
            "name": "volume-demo-emptydir",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-10-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [ "[variables('storageName')]" ],
            "properties": {
                "containers": [
                    {
                        "name": "[variables('container1name')]",
                        "properties": {
                            "image": "[variables('container1image')]",
                            "resources": {
                                "requests": {
                                    "cpu": 1,
                                    "memoryInGb": 1.5
                                }
                            },
                            "volumeMounts": [
                                {
                                    "name": "vol1",
                                    "mountPath": "/mnt/empty"
                                }
                            ]
                        }
                    }
                ],
                "osType": "Linux",
                "volumes": [
                    {
                        "name": "vol1",
                        "azureFile": {
                            "shareName": "myshare002", // name of file share
                            "storageAccountName": "[variables('storageName')]", // storage account
                            "storageAccountKey": "[listKeys(variables('storageName'), '2018-07-01').keys[0].value]" // storage key
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2018-07-01",
            "name": "[variables('storageName')]",
            "location": "[resourceGroup().location]",
            "kind": "StorageV2",
            "sku": {
                "name": "Standard_LRS"
            },
            "properties": {
                "accessTier": "Hot"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
            "apiVersion": "2019-04-01",
            "name": "[concat(variables('storageName'), '/default/', 'myshare002')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageName'))]"
            ]
        }
    ]
}